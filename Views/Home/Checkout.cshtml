@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_LayoutContent.cshtml";

}
@{
    decimal total = 0;
}

@model CheckoutViewModel
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6>
                    <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                </h6>
            </div>
        </div>
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form action="/Home/PlaceOrder" method="post">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="row">
                          
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Last Name<span>*</span></p>
                                    <input type="text" value="@Model.Username" disabled>
                                </div>
                            </div>
                        </div>
                       
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" placeholder="Street Address" class="checkout__input__add" required>
                            <input type="text" placeholder="Apartment, suite, unite ect (optinal)">
                        </div>
                        
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input type="text" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="email" required>
                                </div>
                            </div>
                        </div>
                       
                        <div class="checkout__input">
                            <p>Order notes</p>
                            <input type="text"
                                   placeholder="Notes about your order, e.g. special notes for delivery.">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                @foreach (var item in Model.UserCartItems)
                                {
                                    decimal itemTotal = item.DonGia * item.SoLuong;
                                    total += itemTotal;

                                    <li>@item.MaSpNavigation.TenSp <span>$ @itemTotal.ToString("N0")</span></li>
                                }
                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>$ @total.ToString("N0")</span></div>
                            <div class="checkout__order__total">Total <span>$ @total.ToString("N0")</span></div>
                            
                            <div class="checkout__input__checkbox">
                                <label for="checkPayment">
                                    Payment upon delivery
                                    <input type="radio" id="checkPayment" name="payment" value="cash" required>
                                    <span class="checkmark"></span>
                                </label>

                                <label for="vnpay">
                                    VNPay
                                    <input type="radio" id="vnpay" name="payment" value="vnpay" required>
                                    <span class="checkmark"></span>
                                </label>
                            </div>

                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->

<script>
</script>
